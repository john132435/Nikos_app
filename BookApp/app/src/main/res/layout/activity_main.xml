<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book"
    tools:context="com.example.user.bookapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#800080"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/title"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#800080"
                        android:gravity="center_vertical"
                        android:text="@string/publisher"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/rating"
                        android:textColor="#800080"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/titleInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/publisherInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/ratingInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:digits="123456789."
                    android:inputType="numberDecimal"
                    />

                <Button
                    android:id="@+id/newEntryButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="@string/new_entry"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="right"
                    android:onClick="OnNewEntry">

                </Button>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/worst_rating"
                android:textColor="#FF0000"
                android:textSize="21sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/worstBook1Title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FF0000"
                    android:textSize="13sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/worstBook1Publisher"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/worstBook1Rating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"/>
                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/worstBook2Title"
                    android:layout_width="0dp"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/worstBook2Publisher"
                    android:layout_width="0dp"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/worstBook2Rating"
                    android:layout_width="0dp"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>
                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/worstBook3Title"
                    android:layout_width="0dp"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/worstBook3Publisher"
                    android:layout_width="0dp"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/worstBook3Rating"
                    android:layout_width="0dp"
                    android:textColor="#FF0000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>
                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/best_rating"
                android:textColor="#008000"
                android:textSize="21sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/bestBook1Title"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/bestBook1Publisher"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/bestBook1Rating"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>
                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/bestBook2Title"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/bestBook2Publisher"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/bestBook2Rating"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>
                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/bestBook3Title"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/bestBook3Publisher"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#008000"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/bestBook3Rating"
                    android:layout_width="0dp"
                    android:textColor="#008000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="12sp"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>
                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <EditText
                    android:id="@+id/titleInputFind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/publisherInputFind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"
                    />

                <Button
                    android:id="@+id/findButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/find"
                    android:textSize="13sp"
                    android:onClick="FindBook"
                    />

                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:id="@+id/titleInputUpdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/publisherInputUpdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/ratingInputUpdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    />

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/update"
                    android:textSize="13sp"
                    android:onClick="UpdateBook" />

                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:id="@+id/titleInputDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/publisherInputDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="text"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/delete"
                    android:textSize="13sp"
                    android:onClick="DeleteBook" />

                <TextView
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>








</android.support.constraint.ConstraintLayout>
